        "build:types": "tsc --emitDeclarationOnly",
        "build:post-clean": "rm -rf dist/main.js",
        "build": "yarn build:clean && yarn build:scripts && yarn build:esm && yarn build:types && yarn build:umd && yarn build:post-clean",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "type-check": "tsc --noEmit",
