{
    "name": "root",
    "license": "MIT",
    "devDependencies": {
        "@commitlint/cli": "^9.1.1",
        "@commitlint/config-conventional": "^9.1.1",
        "commitizen": "^4.1.2",
        "husky": "^4.2.5",
        "lerna": "^3.22.1",
        "prettier": "^2.0.5",
        "pretty-quick": "^2.0.1"
    },
    "scripts": {
        "commit": "git-cz",
        "semantic-release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo",
        "postinstall": "lerna bootstrap && lerna run --scope @ruis/tokens build",
        "commitmsg": "validate-commit-msg",
        "build": "lerna run build",
        "test": "lerna run test",
        "lint": "lerna run lint",
        "type-check": "lerna run type-check"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn pretty-quick --staged",
            "pre-push": "yarn lint && yarn type-check && yarn test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
